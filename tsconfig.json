{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "es2018",
      "dom",
      "DOM.Iterable"
    ],
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
